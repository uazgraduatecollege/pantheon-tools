#!/usr/bin/env bash

#
# Create new pantheon site
#
# Defaults:
#  - org: UA Campus Web Services
#  - region: United States
#  - upstream: Arizona Quickstart 3
#

if [[ -z ${SITE_NAME} ]]; then
    echo -e "\e[31mError: SITE_NAME must be set\e[0m"
    exit 1
fi

if [[ -z ${SITE_LABEL} ]]; then
    SITE_LABEL=${SITE_NAME}
fi

if [[ -z ${REGION} ]]; then
    REGION="us"
fi

if [[ -z ${ORG} ]]; then
    ORG="ua-campus-web-services"
fi

if [[ -z ${UPSTREAM} ]]; then
    UPSTREAM="8d8f8753-0cbc-46e1-aee6-e628f720a798"
fi

echo ""
echo -e "\e[33;44m---Creating ${SITE_NAME}.dev---\e[0m"
echo ""

terminus site:create \
  --region=${REGION} \
  --org=${ORG} \
  ${SITE_NAME} \
  ${SITE_LABEL} \
  ${UPSTREAM}

